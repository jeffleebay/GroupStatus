<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewYourStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Status: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewTheStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="status"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextViewWiFi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi detect prog.: "
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/progressBarWiFi"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextViewNoiseSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noise detect prog.: "
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/ProgressBarNoise"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextViewLocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/ProgressBarLocation"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/TextViewTheLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="coordinates"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonWiFi"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi" />

        <Button
            android:id="@+id/buttonNoise"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noise" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="  " />

            <TextView
                android:id="@+id/TextViewNoise"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="WiFi access: " />

            <ListView
                android:id="@+id/listWiFi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stackFromBottom="true"
                android:transcriptMode="alwaysScroll" >
            </ListView>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="  " />

            <TextView
                android:id="@+id/TextViewNoise"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Noise level: " />

            <ListView
                android:id="@+id/listNoise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stackFromBottom="true"
                android:transcriptMode="alwaysScroll" >
            </ListView>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>